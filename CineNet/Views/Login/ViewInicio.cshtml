<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Imagenes/jpg")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body class="body-content-prim">
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "ViewLogin", "Login", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "ViewLogin", "Login")</li>
                    <li>@Html.ActionLink("About", "ViewRegister", "Register")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="slideshow-container">
        <div class="mySlides fade">
            <div class="numbertext">1 / 3</div>
            <h1 class="text-h1">Turnos Medicos</h1>
            <img src="~/Imagenes/Agenda.jpg" style="width:100%">
            <div class="text">Descargá la cartilla off line desde la app del seguro que tengas asociado y buscá especialistas e instituciones médicas sin conexión a internet.</div>
        </div>

        <div class="mySlides fade">
            <div class="numbertext">2 / 3</div>
            <h1 class="text-h1">Turnos Medicos</h1>
            <img src="~/Imagenes/agua.jpg" style="width:100%">
            <div class="text">Descargá la cartilla off line desde la app del seguro que tengas asociado y buscá especialistas e instituciones médicas sin conexión a internet.</div>
        </div>

        <div class="mySlides fade">
            <div class="numbertext">3 / 3</div>
            <h1 class="text-h1">Turnos Medicos</h1>
            <img src="~/Imagenes/Gris.jpg" style="width:100%">
            <div class="text">Descargá la cartilla off line desde la app del seguro que tengas asociado y buscá especialistas e instituciones médicas sin conexión a internet.</div>
        </div>
        <a class="prev" onclick="plusSlides(-1)">&#10094;</a>
        <a class="next" onclick="plusSlides(1)">&#10095;</a>
    </div>
    <br>

    <div style="text-align:center">
        <span class="dot" onclick="currentSlide(1)"></span>
        <span class="dot" onclick="currentSlide(2)"></span>
        <span class="dot" onclick="currentSlide(3)"></span>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; Buenos Aires @DateTime.Now.Year</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/StylesSlides")
    @RenderSection("scripts", required: false)

</body>
</html>