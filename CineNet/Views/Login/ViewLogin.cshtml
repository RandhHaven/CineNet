@model CineNet.Models.Usuario
@{
    ViewBag.Title = "Ingreso";
}

<div>
    @using (Html.BeginForm("Ingresar", "Login", FormMethod.Post))
    {
        <div class="row">
            <div class="col-lg-3"></div>
            <div class="col-lg-6">
                <h1> Ingrese a tu cuenta</h1>
                <form class="form-horizontal">
                    <div class="form-group">
                        @Html.Label("Usuario: ", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.User, new { @class = "col-lg-9 form-control" })
                            @Html.ValidationMessageFor(m => m.User, "Ingrese el usuario.", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("Password: ", new { @class = "col-lg-3 control-label" })
                        <div class="col-lg-9">
                            @Html.TextBoxFor(m => m.Password, new { @class = "col-lg-9 form-control", Type = "password" })
                            @Html.ValidationMessageFor(m => m.Password, "Ingrese la contraseña", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-12">
                            <a> @Html.ActionLink("Olvidó su Contraseña.", "Registro", "Action", new { @class = "col-lg-12" }) </a>
                        </div>
                    </div>

                    <div>
                        <input class="btn-primary d-block col-lg-3 form-control" ; type="submit" name="btnSubmit" value="Ingresar" />
                    </div>
                </form>
            </div>
            <div class="col-lg-3"></div>
        </div>
    }
</div>